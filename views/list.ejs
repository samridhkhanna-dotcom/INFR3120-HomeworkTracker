<%- include("partials/header") %>

<h2 class="mb-4">All Homework</h2>

<a href="/homework/create" class="btn btn-success mb-3">
    + Add Homework
</a>

<% if (homeworkList.length === 0) { %>
    <div class="alert alert-info">
        No homework added yet. Click "Add Homework" to get started.
    </div>
<% } else { %>

<table class="table table-bordered table-striped">
    <thead class="table-primary">
        <tr>
            <th>Title</th>
            <th>Course</th>
            <th>Due Date</th>
            <th>Status</th>
            <th style="width: 160px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        <% homeworkList.forEach(item => { %>
            <tr>
                <td><%= item.title %></td>
                <td><%= item.course %></td>
                <td><%= item.dueDate.toDateString() %></td>
                <td><%= item.status %></td>
                <td>
                    <a href="/homework/edit/<%= item._id %>" class="btn btn-sm btn-warning">
                        Edit
                    </a>

                    <a href="/homework/delete/<%= item._id %>" class="btn btn-sm btn-danger ms-1">
                        Delete
                    </a>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>

<% } %>

<%- include("partials/footer") %>
